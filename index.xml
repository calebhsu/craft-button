<craft name="button">
    <parameter name="width" type="int" default="6"/>
    <parameter name="height" type="int" default="1"/>
    
    <group align="x50 y50 z50" color="teal">
        <group align="x50 y50" cut=".holes">
            <column spacing="{{width/6}}" class="holes">
                <repeat n="4">
                    <row spacing="{{width/6}}">
                        <repeat n="2">
                            <cylinder radius="{{width / 12}}" height="{{height}}"></cylinder>
                        </repeat>
                    </row>
                </repeat>
            </column>

            <cylinder radius="{{width / 2}}" height="{{height}}"></cylinder>
        </group>
        
        <script>
            function main() {
                // Border
                return torus({
                    ri: 1,
                    ro: params.width / 2,
                    fni: 6
                }).translate([0, 0, 0.5]).scale([1, 1, params.height]);
            }
        </script>
    </group>

</craft>